<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Location_Spoof.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,10"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <StackLayout IsVisible="{Binding IsDropdownVisible}">
                <CollectionView ItemsSource="{Binding CountryList}"
                    SelectionMode="Single"
                    SelectionChangedCommand="{Binding SelectCountryCommand}"
                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding FlagImage}" WidthRequest="30" HeightRequest="20" />
                                <Label Text="{Binding Name}" VerticalTextAlignment="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
            <Button Command="{Binding ToggleDropdownCommand}" Text="Toggle Dropdown" />

            <!-- Your Popup or Expander with a CollectionView showing images + names -->


            <SearchBar Placeholder="Search..." >
                <SearchBar.Behaviors>
                    <behaviors:UserStoppedTypingBehavior
                        Command="{Binding SearchCommand}"
                        StoppedTypingTimeThreshold="1000"
                        MinimumLengthThreshold="3"
                        ShouldDismissKeyboardAutomatically="True" />
                </SearchBar.Behaviors>
            </SearchBar>

            <Label
                Text="Spoof the location"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App UI" />
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
